

<%-include('../layouts/userHeader.ejs') %>


<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="/" rel="nofollow">Home</a>
                <span></span> Shop
                <span></span> Wishlist
            </div>
        </div>
    </div>
    <section class="mt-50 mb-50">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table shopping-summery text-center">
                            <thead>
                                <tr class="main-heading">
                                    <th scope="col" colspan="2">Product</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Stock Status</th>
                                    <th scope="col">Action</th>
                                    <th scope="col">Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                              <% if (wishlistItems.length > 0) {
                                wishlistItems.forEach(product => { %>
                                  <tr>
                                    <td colspan="2">
                                        <div class="d-flex align-items-center">
                                            <img src='/assets/imgs/product/<%= product.product.image[0] %>' alt="<%= product.product.image[0] %>"
                                                style="width: 45px; height: 45px" class="rounded-circle" />
                                            <div class="ms-3">
                                                <p class="fw-bold mb-1">
                                                    <%= product.product.name %>
                                                </p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="info align-items-center">
                                            <span>
                                                <%= product.product.price %>
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="fw-bold mb-1">
                                            <%= product.product.stock %>
                                        </p>
                                    </td>
                                    <td>
                                      <% if (product.product.stock === 0) { %>
                                          <button class="button button-out-of-stock" disabled>Out of stock</button>
                                      <% } else { %>
                                          <!-- <form action="/cart" method="post">
                                              <input type="hidden" value="<%= product.product._id %>" name="productData_id"  id="">
                                              <button onclick="addToCartFromWishlist('<%= product.product._id %>')" class="button button-add-to-cart">Add to cart</button>
                                            </form> -->

                                            <button onclick="addToCartFromWishlist('<%= product.product._id %>')" class="button button-add-to-cart">Add to cart</button>
                                      <% } %>
                                  </td>
                                    <td class="action" data-title="Remove"><a onclick="ProductUnlist('<%= product.product._id %>')"><i class="fi-rs-trash"></i></a></td>
                                </tr>
                                <% });
                              } else { %>
                                <tr>
                                    <td colspan="6">
                                        <p>No items in wishlist</p>
                                    </td>
                                </tr>
                              <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>



<script>

function addToCartFromWishlist(product_Id) {
    const quantity = 1; // Default quantity
    fetch('/wishlistcart', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ product_Id: product_Id, qty: quantity })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            console.log('Product added to cart successfully:', data.message);
            // Optionally, you can perform some action after successfully adding the product to the cart
        } else {
            console.error('Failed to add product to cart:', data.error);
        }
    })
    .catch(error => {
        console.error('Error adding product to cart:', error);
    });
}


  document.addEventListener("DOMContentLoaded", function () {
    const searchInput = document.getElementById("searchInput");
    const table = document.getElementById("products");
    const rows = table.getElementsByTagName("tr");

    searchInput.addEventListener("keyup", function () {
      const searchText = searchInput.value.toLowerCase();

      for (let i = 1; i < rows.length; i++) {
        const rowData = rows[i].textContent.toLowerCase();
        if (rowData.includes(searchText)) {
          rows[i].style.display = "";
        } else {
          rows[i].style.display = "none";
        }
      }
    });
  });


  function addToWishlist(product_Id) {
    fetch('/wishlist', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({product_Id: product_Id })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            console.log('Product added to wishlist successfully:', data.message);
            // Optionally, you can perform some action after successfully adding the product to the wishlist
        } else {
            console.error('Failed to add product to wishlist:', data.error);
        }
    })
    .catch(error => {
        console.error('Error adding product to wishlist:', error);
    });
}






function ProductUnlist(product_Id) {
  Swal.fire({
    title: "Are you sure?",
    text: "Please confirm to remove this product!",
    icon: "warning",
    showCancelButton: true,
    confirmButtonColor: "#3085d6",
    cancelButtonColor: "#d33",
    confirmButtonText: "Yes!",
  }).then((result) => {
    if (result.isConfirmed) {
      // Perform the deletion via AJAX/fetch to the server
      fetch('/removeWishlist', {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ productData_id: product_Id })
      }).then(response => {
        if (response.ok) {
          // Product successfully deleted
          // Swal.fire({
          //   title: "success",
          //   text: "product is removed!",
          //   icon: "success",
          //   timer: 800,
          //   timeProgressBar: false,
          //   showConfirmButton: false,
          // }).then(() => {
            // Redirect after displaying the success message
            window.location.reload();
          // });
        } else {
          Swal.fire("Error!", "Failed to delete product 1", "error");
        }
      }).catch(error => {
        Swal.fire("Error!", "Failed to delete product", "error");
      });
    }
  });
}

</script>

