

<%-include('../layouts/userHeader.ejs') %>


<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="index.html" rel="nofollow">Home</a>
                <span></span> Shop
                <span></span> Wishlist
            </div>
        </div>
    </div>
    <section class="mt-50 mb-50">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table shopping-summery text-center">
                            <thead>
                                <tr class="main-heading">
                                    <th scope="col" colspan="2">Product</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Stock Status</th>
                                    <th scope="col">Action</th>
                                    <th scope="col">Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                <div>
                                  <table>
                                    <tbody>
                                      <% if (products.length > 0) {
                                        products.forEach(product => {
                                          if (product.is_listed) { %>
                                    
                                            <tr>
                                              <td>
                                                <div class="d-flex align-items-center">
                                                  <img src='/admin-assets/imgs/product/<%= product.image[0]%>' alt="<%= product.image[0] %>"
                                                    style="width: 45px; height: 45px" class="rounded-circle" />
                                                  <div class="ms-3">
                                                    <p class="fw-bold mb-1">
                                                      <%= product.name %>
                                                    </p>
                                                  </div>
                                                </div>
                                              </td>
                                    
                                              <td>
                                                <% const categoryId = product.category %>
                                                <% categories.forEach(category => { %>
                                                  <% if (categoryId.toString() === category._id.toString()) { %>
                                                    <span>
                                                      <%= category.name %>
                                                    </span>
                                                  <% } %>
                                                <% }); %>
                                              </td>
                                              <td>
                                                <div class="info align-items-center">
                                                  <span>
                                                    <%= product.price %>
                                                  </span>
                                                </div>
                                              </td>
                                              <td>
                                                <!-- <% const productStock = product.sizes.map(value => value.stock).reduce((accumulator, currentValue) =>
                                                  accumulator + currentValue, 0); %> -->
                                                <p class="fw-bold mb-1">
                                                  <%= product.stock %>
                                                </p>
                                              </td>
                                    
                                              <!-- <td>
                                                <%= new Date(product.productAddDate).toLocaleDateString() %>
                                              </td> -->
                                    
                                              <td>
                                                <form action="/cart" method="post">
                                                  <input type="hidden" value="<%= product._id %>" name="productData_id"  id="">
                                              </form>
                                                <button type="submit"  class="button button-add-to-cart">Add to cart</button>
                                                <!-- <a href="/admin/editProduct/?id=<%= product._id %>" class="btn text-warning font-sm rounded btn-light">
                                                  <i class="material-icons md-edit"></i> Edit
                                                </a> -->
                                              </td>
                                              <td class="action" data-title="Remove"><a onclick="ProductUnlist('<%= product._id %>')"><i class="fi-rs-trash"></i></a></td>
                                            </tr>
                                          <% }
                                        });
                                      } else { %>
                                        <tr>
                                          <td colspan="6">
                                            <p>User not found</p>
                                          </td>
                                        </tr>
                                      <% } %>
                                    </tbody>
                              </tbody>
                                  </table>
                              </div>
                    </div>
            </div>
        </div>
    </section>
</main>

<script>

  document.addEventListener("DOMContentLoaded", function () {
    const searchInput = document.getElementById("searchInput");
    const table = document.getElementById("products");
    const rows = table.getElementsByTagName("tr");

    searchInput.addEventListener("keyup", function () {
      const searchText = searchInput.value.toLowerCase();

      for (let i = 1; i < rows.length; i++) {
        const rowData = rows[i].textContent.toLowerCase();
        if (rowData.includes(searchText)) {
          rows[i].style.display = "";
        } else {
          rows[i].style.display = "none";
        }
      }
    });
  });


  function ProductUnlist(productId) {
    Swal.fire({
      title: "Are you sure?",
      text: "Please confirm to remove this product!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes!",
    }).then((result) => {
      if (result.isConfirmed) {
        // Perform the deletion via AJAX/fetch to the server
        fetch(`/removeWishlist/${productId}`, {
          method: 'DELETE',
          // Add other necessary headers or configurations
        }).then(response => {
          if (response.ok) {
            // Product successfully deleted
            Swal.fire({
              title: "success",
              text: "product is removed!",
              icon: "success",
              timer: 2000,
              timeProgressBar: true,
              showConfirmButton: false,


            })
              .then(() => {
                // Redirect after displaying the success message
                window.location.reload= '/users/wishlist'; // Redirect to a suitable page
              });
          } else {
            Swal.fire("Error!", "Failed to delete product 1", "error");
          }
        }).catch(error => {
          Swal.fire("Error!", "Failed to delete product", "error");
        });
      }
    });
  }

</script>

<%-include('../layouts/userFooter.ejs') %> 