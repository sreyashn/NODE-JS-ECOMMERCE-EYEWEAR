                                            <th width="20%">Unit Price</th>
                                            <th width="20%">Quantity</th>
                                            <th width="20%" class="text-end">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% let subtotal=0; order.items.forEach(function(item) { 
                                           let total=item.product.discount_price * item.quantity; subtotal +=total; %>
                                                <tr>
                                                    <td>
                                                        <a class="itemside" href="#">
                                                            <div class="left">
                                                                <img src="/admin-assets/imgs/product/<%=item.product.image[0]%>"
                                                                    width="40" height="40" class="img-xs" alt="Item">
                                                            </div>
                                                            <div class="info">
                                                                <%=item.product.name %>
                                                            </div>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        ₹<%=item.product.discount_price %>
                                                    </td>
                                                    <td>
                                                        <%=item.quantity %>
                                                    </td>
                                                    <td class="text-end">
                                                        ₹<%= total %>
                                                    </td>
                                                    <td>
                            <a  class="btn bg-danger" onclick="cancelOrder('<%= order._id %>')">cancel</a>
                        </td>
                                                </tr>
                                                <% 
                                                    }) %>
                                        <tr>
                                            <td colspan="4">
                                                <article class="float-end">
                                                    <dl class="dlist">
                                                        <dt>Subtotal:</dt>
                                                        <dd>₹<%= subtotal %></dd>
                                                    </dl>
                                                    <dl class="dlist">
                                                        <dt>Shipping cost:</dt>
                                                        <dd>₹0.00</dd>
                                                    </dl>
                                                    <dl class="dlist">
                                                        <dt>Grand total:</dt>
                                                        <dd> <b class="h5">₹<%= subtotal %></b> </dd>
                                                    </dl>
                                                    <dl class="dlist">
                                                        <dt class="text-muted">Status:</dt>
                                                        <dd  id="order-status">
                                                            <span class="badge rounded-pill alert-success text-success text-danger"><%= order.status %></span>
                                                        </dd>
                                                    </dl>
                                                </article>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div> <!-- table-responsive// -->
                        </div> 
                       
                      
                    </div>
                </div>
            </div> 
        </section> 

        <script>
      
        async function cancelOrder(orderId) {
            const orderStatusElement = document.getElementById('order-status');
            
            // Show SweetAlert confirmation dialog
            const isConfirmed = await Swal.fire({
                title: 'Are you sure?',
                text: 'Do you really want to cancel this order?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, cancel it!'
            });
        
            if (isConfirmed.isConfirmed) {
                console.log('User confirmed cancellation. Proceeding with orderId:', orderId);
        
                try {
                    // Loop through each product in the order and send a cancellation request
                    for (const item of order.items) {
                        const productId = item.product._id;
                        const response = await fetch(`/cancelProduct?orderId=${orderId}&productId=${productId}`);
                        const data = await response.text();
        
                        // Check if the response contains an error message
                        if (data.includes('Error')) {
                            console.error('Failed to cancel product:', data);
                            // Show an alert for testing
                            alert('Failed to cancel product. Please try again.');
                        }
                    }
        
                    localStorage.setItem('orderCancelled', 'true');
                    
                    // Update the status on the page
                    // if (orderStatusElement) {
                    //     orderStatusElement.innerHTML = '<span class="badge rounded-pill alert-danger text-danger">Cancelled</span>';
                    // }
        
                    // Show SweetAlert using Swal.fire directly
                    Swal.fire({
                        title: 'Order Cancelled',
                        text: 'Your order has been successfully cancelled.',
                        icon: 'success',
                    });
                } catch (error) {
                    console.error('Error cancelling order:', error);
                    // Show an alert for testing
                    alert('Error cancelling order. Please try again.');
                }
            } else {
                // User clicked cancel, do nothing or provide feedback
                console.log('User canceled the cancellation.');
            }
        }
        
    </script> 
        
        
 

